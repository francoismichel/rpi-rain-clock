<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
        <div class="row">
            <div class="col-3">
                <form method = "post">
                    <div class="mb-3">
                      <label for="interval-select" class="form-label">Forecast interval</label>
                      <select id="interval-select" name="interval-select" value="15" class="form-select" aria-label="Default select example">
                          <option value="1">1 minutes</option>
                          <option value="5">5 minutes</option>
                          <option value="15" selected>15 minutes</option>
                          <option value="30">30 minutes</option>
                      </select>
                    </div>
                    <div class="mb-3">
                      <span  class="form-label">Colors</label>
                      {% for dbz, val in sorted(config["colors"].items()) %}
                        <div class="input-group mb-3">
                            {#<span class="input-group-text">{{val["name"]}} rain color</span>#}
                            <input id="{{ dbz }}_name" name="{{ dbz }}_name" class="form-control" value="{{val['name']}}">
                            <input id="{{ dbz }}_color" name="{{ dbz }}_color" type="color" class="form-control" value="{{rgb_to_hex(*config['colors'][dbz]['rgb'])}}" aria-label="Light rain color" aria-describedby="basic-addon1">
                        </div>
                      {% endfor %}
                  </div>
                    <div class="mb-3">
                      <span  class="form-label">Coordinates</label>
                      <input id="latitude-select" name="latitude-select" type="number" class="form-control" value="{{config['latitude']}}" aria-label="Default select example">
                      <input id="longitude-select" name="longitude-select" type="number" class="form-control" value="{{config['longitude']}}" aria-label="Default select example">

                    
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    
  </body>
</html>